{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mocha": true,
        "node": true
    },
    "globals": {
        "$": true,
        "_": true,
        "console": true,
        "expect": true,
        "google": true,
        "initDb": true,
        "module": true,
        "process": true,
        "resetDb": true,
        "sinon": true,
        "supertest": true
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "arrow-parens": ["warn", "as-needed"],
        "indent": [2, 2, {"SwitchCase": 1}],
        "react/prop-types": "off",
        "semi": ["warn", "never"],
        "no-console": ["error", { "allow": ["info", "warn", "error"] }],
        "react/no-deprecated": "off"
    }
}
